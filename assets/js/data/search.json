---
layout: null
---

[
  {% assign entries = site.posts | concat: site.statuses %}
  {% for post in entries %}
    {
      "title": {{ post.title | jsonify }},
      "url": {{ post.url | relative_url | jsonify }},
      "date": {{ post.date | date: "%Y-%m-%d" | jsonify }},
      "content": {{ post.content | strip_html | normalize_whitespace | truncate: 500 | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
